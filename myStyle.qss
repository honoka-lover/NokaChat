/*左侧栏UI样式*/
#listWidget {
    background: transparent;
    border-style: flat;
}

QFrame {
    border-style: flat;
}

QListWidget#listWidget::item {
    color: white;
    border: none;
    border-style: flat;
}

QListWidget#listWidget::item:selected {
    color: white;
    background-color: rgba(234, 140, 103, 0.5);
    border: none;
    border-style: flat;
}

QToolButton#musicPlay {
    border-image: url(:/source/png/pause.png);
}

QToolButton#musicPause {
    border-image: url(:/source/png/start.png);
}

QToolButton#trumpt {
    border-image: url(:/source/png/trumpt.png);
}

QPushButton#slider{
    color:gray;
    background-color:black;
    border:1px gray;
}

QPushButton#slider:hover{
    background:#cccccc;
}

QPushButton#slider:pressed{
    background:#aaaaaa;
}
